<Page
    x:Class="Ambasada.VIew.SlanjeEmail"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Ambasada.VIew"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBox x:Name="EmailTB" HorizontalAlignment="Left" Margin="64,127,0,0" Text="email" VerticalAlignment="Top" Width="382"/>
        <TextBox x:Name="NaslovTB" HorizontalAlignment="Left" Margin="64,191,0,0" Text="Naslov" VerticalAlignment="Top" Height="17" Width="382"/>
        <RichTextBlock x:Name="EmailRTB" HorizontalAlignment="Left" Height="536" Margin="64,297,0,0" VerticalAlignment="Top" Width="1170">
            <Paragraph>
                <Run Text="RichTextBlock"/>
            </Paragraph>
        </RichTextBlock>
        <Button x:Name="PosaljiEmailButton" Content="Pošalji email&#xD;&#xA;" HorizontalAlignment="Left" Margin="64,894,0,0" VerticalAlignment="Top" Width="201" Height="32"/>
        <Button x:Name="NazadButton" Content="Logout" HorizontalAlignment="Left" Margin="1248,894,0,0" VerticalAlignment="Top" Width="201" Click="NazadButton_Click"/>

    </Grid>
</Page>
